<p id="notice"><%= notice %></p>

<h1>Log In</h1>

<%= form_tag({controller: "sessions", action: "create"}) do %>

  <div class="field">
    <%= label_tag :username %><br/>
    <%= text_field_tag :username, params[:username] %><br/>
  </div>
  <div class="field">
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %><br/>
  </div>
  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>

<% end %>
