<p id="notice"><%= notice %></p>

<div>

  <div class="login-form">

    <p class="title">Log In:</p>

    <%= form_tag({controller: "sessions", action: "create"}) do %>

      <div class="field">
        <%= label_tag :username %><br/>
        <%= text_field_tag :username, params[:username], placeholder: "Enter your username" %><br/>
      </div>
      <div class="field">
        <%= label_tag :password %><br/>
        <%= password_field_tag :password, "", placeholder: "Password" %><br/>
      </div>
      <div class="actions">
        <%= submit_tag "Sign In", { :class => "login-button button-green" } %>
      </div>

    <% end %>

  </div>

</div>
