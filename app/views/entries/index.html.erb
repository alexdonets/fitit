<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Food</th>
      <th>Amount</th>
      <th>Day</th>
      <th>Meal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.owner_id %></td>
        <td><%= entry.food_id %></td>
        <td><%= entry.amount %></td>
        <td><%= entry.day %></td>
        <td><%= entry.meal %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

