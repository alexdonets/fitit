

<div class="edit-entry">



  <div class="base-form edit-entry-content ">

    <p class="title">Change amount</p>
    <%= form_for(@entry, :url => :update_entry) do |f| %>

    <% if @entry.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <%= f.hidden_field :id, :value => @entry.id %>
      <%= f.hidden_field :day, :value => @entry.day %>
      <div class="field">
        <%= f.label :amount, "Amount:" %>
        <%= f.number_field :amount, :step => 0.01 %>
      </div>

      <div class="actions">
        <div class="button-set">
          <%= f.submit "Update", :class => "button-green update-button" %>
            <%= link_to "Cancel", diary_url(:curr_day => @entry.day),   :class => "button-red cancel-button" %>
        </div>

      </div>
    <% end %>

  </div>
</div>
