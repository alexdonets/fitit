<h1>Listing Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Portion</th>
      <th>Calories</th>
      <th>Fat</th>
      <th>Carb</th>
      <th>Protein</th>
      <th>Fiber</th>
      <th>Sugar</th>
      <th>Category</th>
      <th>Added by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.id %></td>
        <td><%= food.name %></td>
        <td><%= food.portion %></td>
        <td><%= food.calories %></td>
        <td><%= food.fat %></td>
        <td><%= food.carb %></td>
        <td><%= food.protein %></td>
        <td><%= food.fiber %></td>
        <td><%= food.sugar %></td>
        <td><%= food.category %></td>
        <td><%= food.added_by %></td>
        <td><%= link_to 'Add', new_entry_url(food.id) %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

